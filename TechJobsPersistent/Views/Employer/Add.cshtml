@model TechJobsPersistent.ViewModels.AddEmployerViewModel;
<h1>Add New Employer</h1>

<form asp-controller="Employer" asp-action="ProcessAddEmployerForm" method="post">
    <div class="form-group">
        <label>Employer Name
        <input asp-for="Name"/></label>
    </div>
    <div class="form-group">
        <label>Employer Location
        <input asp-for="Location"/></label>
    </div>
    <input type="submit" value="Submit" />
</form>